@model List<Team>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Table</h4>

            <a asp-controller="Team" asp-action="Create" class="btn btn-success">Create Team</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Surname
                            </th>
                            <th>
                                Postions
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Team team in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/img/@team.Image"/>
                                </td>
                                <td>
                                   @team.Name
                                </td>
                                <td>
                                    @team.Surname
                                </td>
                                <td>
                                    @team.Position.Name
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Team" asp-route-id="@team.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                    <a asp-action="Delete" asp-controller="Team" asp-route-id="@team.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>